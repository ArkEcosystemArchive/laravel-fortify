{
    "name": "arkecosystem/fortify",
    "description": "Authentication Scaffolding for Laravel. Powered by Laravel Fortify.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Brian Faust",
            "email": "hello@basecode.sh"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0",
        "livewire/livewire": "^2.0",
        "pragmarx/google2fa-laravel": "^1.3",
        "laravel/fortify": "^1.0",
        "jenssegers/agent": "^2.6",
        "arkecosystem/ui": "^3.0",
        "spatie/laravel-personal-data-export": "^2.0",
        "spatie/laravel-medialibrary": "^9.4",
        "konceiver/laravel-data-bags": "^1.1",
        "spatie/laravel-newsletter": "^4.9",
        "danharrin/livewire-rate-limiting": "^0.2.0",
        "guzzlehttp/guzzle": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "ARKEcosystem\\Fortify\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Database\\Factories\\": "database/factories/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ARKEcosystem\\Fortify\\FortifyServiceProvider"
            ]
        }
    },
    "scripts": {
        "format": [
            "vendor/bin/php-cs-fixer fix"
        ],
        "test": [
            "./vendor/bin/pest --coverage --min=100 --coverage-html=.coverage --coverage-clover=coverage.xml"
        ]
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "graham-campbell/analyzer": "^3.0",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/larastan": "^0.6.4",
        "nunomaduro/laravel-mojito": "^0.2.4",
        "pestphp/pest": "^0.3.0",
        "pestphp/pest-plugin-faker": "^0.3.0",
        "pestphp/pest-plugin-laravel": "^0.3.0",
        "pestphp/pest-plugin-livewire": "^0.3.0",
        "phpunit/phpunit": "^9.3",
        "psalm/plugin-laravel": "^1.4",
        "rector/rector": "^0.8.14",
        "teamtnt/laravel-scout-tntsearch-driver": "^10.0",
        "vimeo/psalm": "^4.0",
        "orchestra/testbench": "^6.2"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
